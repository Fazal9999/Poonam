<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AppTheme">
        <attr name="colorPrimary" format="color"/>
        <attr name="colorSecondary" format="color"/>
        <attr name="colorPrimaryText" format="color"/>
        <attr name="colorSecondaryText" format="color"/>
        <attr name="colorIcon" format="color"/>
        <attr name="colorBackground" format="color"/>
        <attr name="colorCardBackground" format="color"/>
        <attr name="colorCamera" format="color"/>
        <attr name="colorMicrophone" format="color"/>
        <attr name="colorLocation" format="color"/>
    </declare-styleable>
    <declare-styleable name="CustomizableButton">

        <!-- android -->
        <attr name="android:enabled" />
        <attr name="android:text" />
        <attr name="android:textSize" />
        <attr name="android:textAllCaps" />
        <attr name="android:textStyle" />
        <attr name="android:elevation" />

        <!-- normal -->
        <attr name="cb_textColorNormal" format="color"/>
        <attr name="cb_backgroundColorNormal" format="color"/>
        <attr name="cb_backgroundOpacityNormal" format="float"/>
        <attr name="cb_borderColorNormal" format="color"/>
        <attr name="cb_borderThicknessNormal" format="dimension"/>
        <attr name="cb_borderRadiusNormal" format="dimension"/>

        <!-- pressed -->
        <attr name="cb_textColorPressed" format="color"/>
        <attr name="cb_backgroundColorPressed" format="color"/>
        <attr name="cb_backgroundOpacityPressed" format="float"/>
        <attr name="cb_borderColorPressed" format="color"/>
        <attr name="cb_borderThicknessPressed" format="dimension"/>
        <attr name="cb_borderRadiusPressed" format="dimension"/>

        <!-- disabled -->
        <attr name="cb_textColorDisabled" format="color"/>
        <attr name="cb_backgroundColorDisabled" format="color"/>
        <attr name="cb_backgroundOpacityDisabled" format="float"/>
        <attr name="cb_borderColorDisabled" format="color"/>
        <attr name="cb_borderThicknessDisabled" format="dimension"/>
        <attr name="cb_borderRadiusDisabled" format="dimension"/>

        <!-- general -->
        <attr name="cb_enabled" format="boolean"/>
        <attr name="cb_text" format="string"/>
        <attr name="cb_textSize" format="dimension"/>
        <attr name="cb_textAllCaps" format="boolean"/>
        <attr name="cb_textStyle" format="enum">
            <enum name="normal" value="0"/>
            <enum name="bold" value="1"/>
            <enum name="italic" value="2"/>
        </attr>
        <attr name="cb_useRippleEffect" format="boolean"/>
        <attr name="cb_rippleColor" format="color"/>
        <attr name="cb_rippleOpacity" format="float"/>
        <attr name="cb_elevation" format="dimension"/>

    </declare-styleable>
    <declare-styleable name="SettingsView">
        <attr name="settings_title" format="string"/>
        <attr name="settings_info" format="string"/>
        <attr name="settings_icon" format="reference"/>
        <attr name="settings_icon_tint" format="integer"/>
        <attr name="settings_switch_visibility" format="integer"/>
        <attr name="settings_open_visibility" format="integer"/>
    </declare-styleable>
    <declare-styleable name="InfoView">
        <attr name="info_question" format="string"/>
        <attr name="info_answer" format="string"/>
        />
    </declare-styleable>
</resources>